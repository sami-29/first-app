<%= form_with model: [ @article, @article.comments.build ], html: { class: "flex flex-col space-y-4 bg-white dark:bg-gray-900 p-4 rounded-lg" } do |form| %>
  <%= form.text_field :commenter, placeholder: "Your Name", class: "bg-transparent border-b border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:border-gray-600 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
  <%= form.text_area :body, placeholder: "Your Comment", class: "bg-transparent border-b border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:border-gray-600 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
  <%= form.select :status, ['public', 'private', 'archived'], { selected: 'public' }, class: "w-full bg-white border border-gray-300 text-gray-900 py-2.5 px-4 pr-8 rounded-lg leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 select-arrow" %>
  <%= form.submit "Submit", class: "w-full bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 text-white font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
<% end %>
