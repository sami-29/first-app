<% unless comment.archived? %>
  <div class="pt-4 mt-4 border-t border-gray-300 dark:border-gray-600">
    <p class="font-light text-gray-500 dark:text-gray-400">
      <strong class="font-medium text-gray-900 dark:text-white">Commenter:</strong>
      <%= comment.commenter %>
    </p>
    <p class="mt-1 font-light text-gray-500 dark:text-gray-400">
      <strong class="font-medium text-gray-900 dark:text-white">Comment:</strong>
      <%= comment.body %>
    </p>
    <p class="mt-1 font-light text-gray-500 dark:text-gray-400">
      <%= link_to "Delete", [comment.article, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }, html:{class:"text-red-500"} %>
    </p>
  </div>
<% end %>
