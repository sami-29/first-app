<section class="relative p-6 bg-white dark:bg-gray-900">
  <div class="absolute space-x-4 top-4 left-4">
        <%= link_to "Edit", edit_article_path(@article), class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded shadow transition duration-200" %>
        <%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded shadow transition duration-200" %>
      </div>
  <div class="max-w-screen-xl px-4 py-8 mx-auto lg:py-16 lg:px-6">
    <div class="max-w-screen-sm mx-auto mb-8 text-center lg:mb-16">
      <h1 class="mb-4 text-3xl font-extrabold tracking-tight text-gray-900 lg:text-4xl dark:text-white">
        <%= @article.title %>
      </h1>
      <p class="mt-2 text-lg font-light text-gray-500 sm:text-xl dark:text-gray-400">
        <%= @article.body %>
      </p>
    </div>
    <div class="grid gap-8 lg:grid-cols-2">
      <div class="p-6 bg-white border border-gray-200 rounded-lg shadow-lg dark:bg-gray-800 dark:border-gray-700">
        <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Comments</h2>
        <%= render @article.comments %>
        <h3 class="mt-8 mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Add a comment:</h3>
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</section>
